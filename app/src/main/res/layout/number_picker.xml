<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <NumberPicker
        android:id="@+id/np_weight_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <Button
        android:id="@+id/btn_select_lbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lbs"
        android:layout_below="@+id/np_weight_value"
        android:layout_toRightOf="@+id/np_weight_value"
        android:layout_toEndOf="@+id/np_weight_value" />

    <Button
        android:id="@+id/btn_select_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:layout_below="@+id/np_weight_value"
        android:layout_toLeftOf="@+id/np_weight_value"
        android:layout_toStartOf="@+id/np_weight_value" />

</RelativeLayout>